<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <session-config>
        <session-timeout>2</session-timeout>
    </session-config>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:phonebook-context.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/pages/index.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Employees</servlet-name>
        <jsp-file>/WEB-INF/pages/parts/employees.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Employees</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Departments</servlet-name>
        <jsp-file>/WEB-INF/pages/parts/departments.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Departments</servlet-name>
        <url-pattern>/departments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowEmployee</servlet-name>
        <jsp-file>/WEB-INF/pages/parts/employee.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowEmployee</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowDepartment</servlet-name>
        <jsp-file>/WEB-INF/pages/parts/department.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowDepartment</servlet-name>
        <url-pattern>/department</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addEmployee</servlet-name>
        <jsp-file>/WEB-INF/pages/crud/addEmployee.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>addEmployee</servlet-name>
        <url-pattern>/addEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDepartment</servlet-name>
        <jsp-file>/WEB-INF/pages/crud/addDepartment.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDepartment</servlet-name>
        <url-pattern>/addDepartment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteEmployee</servlet-name>
        <servlet-class>com.getjavajob.training.web06.khomutova.servlets.DeleteEmployee</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteEmployee</servlet-name>
        <url-pattern>/DeleteEmployeeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDepartment</servlet-name>
        <servlet-class>com.getjavajob.training.web06.khomutova.servlets.DeleteDepartment</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDepartment</servlet-name>
        <url-pattern>/DeleteDepartmentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchEmployee</servlet-name>
        <jsp-file>/WEB-INF/pages/search/search.jsp</jsp-file>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>searchEmployee</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateEmployee</servlet-name>
        <jsp-file>/WEB-INF/pages/crud/updateEmployee.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateEmployee</servlet-name>
        <url-pattern>/updateEmployee</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateDepartment</servlet-name>
        <jsp-file>/WEB-INF/pages/crud/updateDepartment.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateDepartment</servlet-name>
        <url-pattern>/updateDepartment</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.getjavajob.training.web06.khomutova.Filters.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>com.getjavajob.training.web06.khomutova.Filters.AccessFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/deleteEmployee</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>DB Example</description>
        <res-ref-name>jdbc/phonebook</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>