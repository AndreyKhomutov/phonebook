<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    	http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

       <jee:jndi-lookup id="dataSource" jndi-name="jdbc/phonebook"  expected-type="javax.sql.DataSource" />

       <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
              <constructor-arg ref="dataSource" />
       </bean>

       <bean id="EmployeeDao" class="com.getjavajob.training.web06.khomutova.datebaseclasses.daoClasses.EmployeeDao">
              <constructor-arg ref="dataSource" />
              <constructor-arg ref="AddressDao" />
              <constructor-arg ref="DepartmentDao" />
              <constructor-arg ref="PhoneDao" />
       </bean>

       <bean id="AddressDao" class="com.getjavajob.training.web06.khomutova.datebaseclasses.daoClasses.AddressDao">
              <constructor-arg ref="dataSource" />
       </bean>

       <bean id="DepartmentDao" class="com.getjavajob.training.web06.khomutova.datebaseclasses.daoClasses.DepartmentDao">
              <constructor-arg ref="dataSource" />
       </bean>

       <bean id="PhoneDao" class="com.getjavajob.training.web06.khomutova.datebaseclasses.daoClasses.PhoneDao">
              <constructor-arg ref="dataSource" />
       </bean>

       <bean id="EmployeeService" class="com.getjavajob.training.web06.khomutova.service.service.EmployeeService">
              <constructor-arg ref="EmployeeDao" />
              <constructor-arg ref="AddressDao" />
              <constructor-arg ref="PhoneDao" />
       </bean>

       <bean id="DepartmentService" class="com.getjavajob.training.web06.khomutova.service.service.DepartmentService">
              <constructor-arg ref="DepartmentDao" />
              <constructor-arg ref="EmployeeDao" />
              <constructor-arg ref="AddressDao" />
              <constructor-arg ref="PhoneDao" />
       </bean>

       <bean id="applicationContextProvider" class="com.getjavajob.training.web06.khomutova.servlets.ApplicationContextProvider"></bean>

</beans>